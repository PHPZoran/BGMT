<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BGMT.MainPage">

    <ContentPage.MenuBarItems>
        <!-- File Menu Bar Item -->
        <MenuBarItem Text="File"> 
            <MenuFlyoutItem Text="New Project"
                            Command="{Binding NewProject}"/>
            <MenuFlyoutItem Text="Open Project"
                            Command="{Binding OpenProject}"/>
            <MenuFlyoutItem Text="Import File"
                            Command="{Binding ImportFile}"/>
            <MenuFlyoutItem Text="Export Project"
                            Command="{Binding ExportProject}"/>
            <MenuFlyoutItem Text="Exit"
                            Command="{Binding Exit}"/>
        </MenuBarItem>

        <!-- Help Menu Bar Item -->
        <MenuBarItem Text="Help">
            <MenuFlyoutItem Text="Settings"
                            Command="{Binding AccessSettings}"/>
            <MenuFlyoutItem Text="Help"
                            Command="{Binding AccessHelp}"/>
        </MenuBarItem>
    </ContentPage.MenuBarItems>

</ContentPage>
